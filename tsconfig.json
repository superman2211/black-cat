{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2024",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist/esm",
        "strict": true,
        "allowJs": true,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}